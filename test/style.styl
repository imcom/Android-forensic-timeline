    width: 800px

.span3
    margin-left: 10px

#pids-pane
    position: fixed

#time-window-pane
    position: fixed
    top: 350px

#apply-time-window
    float: right

#objects-pane
    position: fixed
    top: 500px

.dropdown-div
    position: fixed
    top: -670px
    z-index: 100
    opacity: 0.9
    background: white
    width: 99%
    height: 700px
    margin-left: 5px

#dropdown-ctrl-btn
    position: relative
    bottom: -652px

#aggregation-pane
    border: 2px solid
    -webkit-border-radius: 8px
    -moz-border-radius: 8px
    border-radius: 8px

#aggregation-arena
    margin-top: 20px
    margin-left: 50px

.aggregated-graph
    position: fixed

.cluster
    stroke: #000

.aggregation-axis
    fill: none
    stroke: #000
    shape-rendering: crispEdges

    text
        font-family: Consolas
        font-size: 11px

.grid
    line
        opacity: 0.3
        stroke: black
        pointer-events: none
        stroke-dasharray: 5,5

.time-label
    font-family: Consolas
    font-size: 13px
    fill: blue

.time-indicator
    opacity: 0.7
    stroke: red
    stroke-dasharray: 8,8




