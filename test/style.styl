.container-fluid
    margin-top: 25px

h4.text-center
    margin-top: 20px

input
    width: 100%

select
    width: 100%

.ctrl-panel
    position: fixed

ul
    width: 240px

label
    display: inline-block

.span9
    margin-left: 20px
