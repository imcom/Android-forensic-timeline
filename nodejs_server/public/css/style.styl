#extra-ctrl-pane
    min-height: 235px

#running-time, #timezone-info, #temporal-info
    font-family: Consolas
    margin-left: 50px
    margin-top: -10px

#event-display-pane
    margin-top: 15px
    p.nav-header.text-center
        margin-right: 22px
    .container-fluid
        margin-top: -15px

#message-display
    width: 450px
    resize: none
    margin-top: -10px

#event-metadata
    max-height: 380px
    width: 220px
    overflow-x: hidden
    overflow-y: auto

#date-display, #pid-display
    font-family: Consolas
    margin-left: 5px
    font-weight: bold

.dropdown-ctrl-bar
    position: absolute
    width: 100%
    height: 20px
    bottom: 0px
    cursor: pointer
    z-index: 50
    .dropdown-ctrl
        position: absolute
        width: 85px
        height: 16px
        bottom: 0px
        z-index: 0
        left: 47%
        background: url('/images/dropdown_bar_icon.png') top right
        -webkit-transform: rotate(180deg)
        -moz-transform: rotate(180deg)

.dropdown-ctrl-bar:hover
    .dropdown-ctrl
        background: url('/images/dropdown_bar_icon.png') top left

.popup-ctrl-bar
    position: absolute
    width: 100%
    height: 20px
    top: 0px
    cursor: pointer
    z-index: 50
    .popup-ctrl
        position: absolute
        width: 85px
        height: 16px
        top: 0px
        z-index: 0
        left: 45%
        background: url('/images/dropdown_bar_icon.png') top right

.popup-ctrl-bar:hover
    .popup-ctrl
        background: url('/images/dropdown_bar_icon.png') top left

#aggregation-pane, #responsive-pane, #event-detail-pane, #extra-ctrl-pane, #main-ctrl-pane
    border: 2px solid
    -webkit-border-radius: 8px
    -moz-border-radius: 8px
    border-radius: 8px

#aggregation-arena
    margin-top: 20px
    margin-left: 50px

.aggregated-graph, .stacked-graph
    position: fixed

.cluster, timeline-event
    stroke: #000

.aggregation-axis, .time-axis, .stack-axis
    fill: none
    stroke: #000
    shape-rendering: crispEdges
    text
        font-family: Consolas
        font-size: 11px

.grid-main, .grid-extend, .grid-aggr
    line
        opacity: 0.3
        stroke: black
        pointer-events: none
        stroke-dasharray: 5,5

.time-label
    font-family: Consolas
    font-size: 13px
    fill: blue

.time-indicator
    opacity: 0.7
    stroke: orange
    stroke-dasharray: 8,8
    pointer-events: none

rect.ctrl-pane, rect.timeline-ctrl-pane
    cursor: move
    fill: none
    pointer-events: all

.graph-title, .stack-graph-title
    font-family: Consolas
    font-size: 200%
    z-index: 100
    font-style: oblique
    font-variant: small-caps

.stack-graph-title
    font-style: normal
    font-size: 100%
    fill: grey

#zoom-out
    position: fixed
    cursor: pointer
    left: 25px
    bottom: 5px
    z-index: -1
    opacity: 1
    background: url("/images/zoom-out.png")
    width: 64px
    height: 64px

#zoom-in
    position: fixed
    cursor: pointer
    left: 95px
    bottom: 5px
    z-index: -1
    opacity: 1
    background: url("/images/zoom-in.png")
    width: 64px
    height: 64px

#reset-scale
    position: fixed
    cursor: pointer
    left: 165px
    bottom: 5px
    z-index: -1
    opacity: 1
    background: url("/images/reset-timeline.png")
    width: 64px
    height: 64px

#trash
    position: fixed
    cursor: pointer
    left: 235px
    bottom: 5px
    z-index: -1
    opacity: 1
    background: url("/images/trash_icon.png")
    width: 64px
    height: 64px

#time-brush rect.background
    visibility: visible !important

.time-brush rect.background
	fill: rgba(0,0,0,.1)

.time-brush .extent
    stroke: #f09f8c
    fill-opacity: 0.125
    shape-rendering: crispEdges

.time-brush-axis line, .time-brush-axis path
    fill: none
    stroke: #aaa
    fill-opacity: 0.1
    shape-rendering: crispEdges

.time-brush-axis path
    stroke: rgba(0,0,0,.1)

.time-brush-axis text
    font-family: Consolas
    font-size: 12px




