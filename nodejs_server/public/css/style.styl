#content
    position: absolute
    margin-left: 25px
    margin-top: 25px

.timeline
    -webkit-user-select: none;
    -moz-user-select: none;

.slide-right-div
    position: fixed
    right: -280px
    z-index: 100
    opacity: 0.95
    background: white
    width: 300px
    height: 90%
    margin-top: 50px

.slide-right-ctrl-bar
    position: absolute
    width: 20px
    height: 100%
    left: 0px
    cursor: pointer
    z-index: 50
    .slide-right-ctrl
        position: absolute
        width: 16px
        height: 85px
        left: 0px
        z-index: 0
        top: 45%
        background: url('/images/sidebar_icon.png') top right
        -webkit-transform: rotate(0deg)
        -moz-transform: rotate(0deg)

.slide-right-ctrl-bar:hover
    .slide-right-ctrl
        background: url('/images/sidebar_icon.png') bottom right

.slide-left-div
    position: fixed
    left: -280px
    z-index: 100
    opacity: 0.95
    background: white
    width: 300px
    height: 90%
    margin-top: 50px

.slide-left-ctrl-bar
    position: absolute
    width: 20px
    height: 100%
    right: 0px
    cursor: pointer
    z-index: 50
   .slide-left-ctrl
        position: absolute
        width: 16px
        height: 85px
        right: 0px
        z-index: 0
        top: 45%
        background: url('/images/sidebar_icon.png') top right
        -webkit-transform: rotate(180deg)
        -moz-transform: rotate(180deg)

.slide-left-ctrl-bar:hover
    .slide-left-ctrl
        background: url('/images/sidebar_icon.png') bottom right

