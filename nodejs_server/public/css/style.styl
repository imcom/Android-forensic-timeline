#aggregation-pane, #responsive-pane, #event-detail-pane, #extra-ctrl-pane, #main-ctrl-pane
    border: 2px solid
    -webkit-border-radius: 8px
    -moz-border-radius: 8px
    border-radius: 8px

#aggregation-arena
    margin-top: 20px
    margin-left: 50px

.aggregated-graph, .stacked-graph
    position: fixed

.cluster, timeline-event
    stroke: #000

.aggregation-axis, .time-axis, .stack-axis
    fill: none
    stroke: #000
    shape-rendering: crispEdges
    text
        font-family: Consolas
        font-size: 11px

.grid-main, .grid-extend, .grid-aggr
    line
        opacity: 0.3
        stroke: black
        pointer-events: none
        stroke-dasharray: 5,5

.time-label
    font-family: Consolas
    font-size: 13px
    fill: blue

.time-indicator
    opacity: 0.7
    stroke: orange
    stroke-dasharray: 8,8
    pointer-events: none

rect.ctrl-pane, rect.timeline-ctrl-pane
    cursor: move
    fill: none
    pointer-events: all

.graph-title, .stack-graph-title
    font-family: Consolas
    font-size: 200%
    z-index: 100
    font-style: oblique
    font-variant: small-caps

.stack-graph-title
    font-style: normal
    font-size: 100%
    fill: grey

