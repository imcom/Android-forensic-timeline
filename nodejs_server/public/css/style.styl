    */
    position: relative
    fieldset
        position: absolute
    #col_left
        //border: 1px solid yellowgreen
        width: 50%
        left: -5px
    #col_right
        //border: 1px solid grey
        width: 50%
        right: -5px

.time-axis
    path, line
        fill: none
        stroke: black
        shape-rendering: crispEdges
        
    text
        font-family: Consolas
        font-size: 11px

.rule
    line
        opacity: 0.3
        stroke: black
        
#popup_detail
    text-align: center;
    color: #fff;
    background: #111;
    position: absolute;
    z-index: 100;
    padding-left: 5px;
    padding-right: 5px;












        
        
